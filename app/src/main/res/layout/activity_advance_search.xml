<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/advanceSearchScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/advanceSearchKeywordEditView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:autofillHints=""
                android:hint="@string/advanceSearch"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/PRODUCT_TYPE_TITLE"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/advanceSearchTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:entries="@array/product_types"
                android:prompt="@string/product_type_prompt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preferred_exchange_place"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/advanceSearchExchangePlaceEditView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:autofillHints="Halifax"
                android:hint="@string/EXCHANGE_PLACE_HINT"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/value_range"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/value_from" />

                <EditText
                    android:id="@+id/advanceSearchValueFromEditView"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="8dp"
                    android:autofillHints="0"
                    android:hint="@string/default_value_down_range_hint"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/value_to" />

                <EditText
                    android:id="@+id/advanceSearchValueToEditView"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="8dp"
                    android:autofillHints="-1"
                    android:hint="@string/default_value_up_range_hint"
                    android:inputType="number" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/PREF_EXCHANGE_TITLE"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/advanceSearchPrefExchangeSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:entries="@array/product_types" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/advanceSearchCancelButton"
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingEnd="10dp"
                    android:text="@string/CANCEL" />

                <View
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/advanceSearchSubmitButton"
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/SUBMIT" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>